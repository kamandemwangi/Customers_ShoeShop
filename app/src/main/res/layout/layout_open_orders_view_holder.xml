<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="2dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/open_orders_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/add_shoe_placeholder"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/open_orders_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shoe quantity"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/open_orders_shoe_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shoe Size"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/open_orders_shoe_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shoe color"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/open_oders_shoe_price_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shoe price tag"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/open_orders_order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shoe Title"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/open_orders_shop_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shop street"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/open_orders_shop_building"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shop building"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/open_orders_shopNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shop number"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>




</com.google.android.material.card.MaterialCardView>
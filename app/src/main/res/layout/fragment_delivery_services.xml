<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.DeliveryServicesFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/home_office_delivery_cardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="2dp"
        app:cardElevation="4dp"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/home_delivery_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home/office delivery"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pick_from_shop_cardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="2dp"
        app:cardElevation="4dp"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pick_from_the_shop_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick from the shop"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
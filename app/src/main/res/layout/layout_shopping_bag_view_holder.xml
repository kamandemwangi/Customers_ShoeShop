<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="2dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/shopping_bag_image_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/add_shoe_placeholder"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/shopping_bag_shoe_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shoe Title"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/shopping_bag_shoe_price_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price tag"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/shopping_bag_shoe_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/shopping_bag_remove_product_button"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Remove product"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:padding="5dp"
            app:cornerRadius="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
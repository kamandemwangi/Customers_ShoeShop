<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.bottom_nav.AccountFragment">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">

          <com.google.android.material.textview.MaterialTextView
              android:id="@+id/account_details_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Account Details"
              android:padding="5dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:layout_marginTop="50dp"
              android:textAppearance="@style/TextAppearance.MaterialComponents.CustomTitle"/>

          <com.google.android.material.textfield.TextInputLayout
              android:id="@+id/account_details_full_names_textField"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:endIconMode="clear_text"
              app:errorEnabled="true"
              android:hint="Full Names"
              style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
              android:padding="5dp"
              android:enabled="true"
              android:layout_marginTop="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp">

               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:lines="1"
                   android:inputType="textPersonName"
                   android:imeOptions="flagNoExtractUi"/>
          </com.google.android.material.textfield.TextInputLayout>

          <com.google.android.material.textfield.TextInputLayout
              android:id="@+id/account_details_phone_textField"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:endIconMode="clear_text"
              app:errorEnabled="true"
              android:hint="Phone number"
              app:prefixText="+254"
              style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
              android:padding="5dp"
              android:enabled="true"
              android:layout_marginTop="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp">

               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:lines="1"
                   android:inputType="phone"
                   android:imeOptions="flagNoExtractUi"/>
          </com.google.android.material.textfield.TextInputLayout>

          <com.google.android.material.textfield.TextInputLayout
              android:id="@+id/account_details_email_textField"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:endIconMode="clear_text"
              app:errorEnabled="true"
              android:hint="Email"
              style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
              android:padding="5dp"
              android:enabled="true"
              android:layout_marginTop="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp">

               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:lines="1"
                   android:enabled="false"
                   android:inputType="textEmailAddress"
                   android:imeOptions="flagNoExtractUi"/>
          </com.google.android.material.textfield.TextInputLayout>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/account_details_save_changes_button"
              android:layout_width="match_parent"
              android:layout_height="65dp"
              android:text="Save"
              android:textAllCaps="false"
              android:textSize="23sp"
              android:padding="5dp"
              app:cornerRadius="50dp"
              android:layout_marginLeft="40dp"
              android:layout_marginTop="10dp"
              android:layout_marginRight="40dp"
              android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/account_details_open_orders_button"
              android:layout_width="match_parent"
              android:layout_height="65dp"
              android:text="Open orders"
              android:textAllCaps="false"
              android:textSize="23sp"
              android:padding="5dp"
              app:cornerRadius="50dp"
              android:layout_marginLeft="40dp"
              android:layout_marginTop="10dp"
              android:layout_marginRight="40dp"
              style="?attr/materialButtonOutlinedStyle"
              android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/account_details_log_out_button"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:layout_marginLeft="40dp"
              android:layout_marginTop="10dp"
              android:layout_marginRight="40dp"
              android:padding="5dp"
              android:text="Log out"
              android:textColor="#000"
              android:textAllCaps="false"
              android:textSize="17sp"
              app:cornerRadius="50dp"
              android:visibility="visible"
              style="?attr/materialButtonOutlinedStyle"
              android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

          <ProgressBar
              android:id="@+id/account_details_progressBar"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="20dp"
              android:visibility="gone"/>
     </LinearLayout>

</ScrollView>
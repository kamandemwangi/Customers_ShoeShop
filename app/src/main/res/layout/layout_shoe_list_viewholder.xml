<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/shoe_list_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/shoe_list_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/add_shoe_placeholder"
                    android:scaleType="centerCrop"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/shoe_list_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sneakers"
                    android:textSize="20sp"
                    android:padding="2dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/shoe_list_price_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ksh.3500"
                    android:textSize="17sp"
                    android:padding="2dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>